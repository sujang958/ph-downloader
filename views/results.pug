doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1, shrink-to-fit=no')
  link(rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css' integrity='sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm' crossorigin='anonymous')
  link(rel='stylesheet' href='/css/index.css')
  title Ph downloader
.cover-container.d-flex.h-100.p-3.mx-auto.flex-column
  header.masthead.mb-auto
    .inner
      h3.masthead-brand Ph-downloader
      nav.nav.nav-masthead.justify-content-center
        a.nav-link.active(href='#') Ph
        a.nav-link(href='#') Xv
  main.inner.cover(role='main')
    h1.cover-heading Paste Ph url
    p.lead example: https://www.ph.com/view_video.php?viewkey=ph5fe020dc7eba5
    p.lead
      .input-group.mb-3
        .input-group-append
          select.form-select(required='')
            option(value='') Select type
            option(value='url') URL
            option(value='search') Search
        input.form-control(type='text' id='basic-url search-q-input' aria-describedby='basic-addon3')
        .input-group-prepend
          button#submit-btn.btn.btn-default(type='button') Submit
  table.table
    thead
      tr
        th(scope='col') Title
        th(scope='col') Views
        th(scope='col') Link
        th(scope='col') Download
    tbody
      for item in results
        tr
          td= item.title
          td= item.views
          td= item.link
          td= item.download_urls
          //- td
          //-   a(href=`${item.download_urls}` download) donwload
            

  footer.mastfoot.mt-auto
    .inner
      p Site by someone.


